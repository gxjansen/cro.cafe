---
import '~/assets/styles/tailwind.css';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import HreflangTags from '~/components/common/HreflangTags.astro';
import StructuredData from '~/components/common/StructuredData.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import { headerData, footerData } from '~/navigation';

// Comment the line below to disable View Transitions
import { ClientRouter } from 'astro:transitions';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
  availableLanguages: string[];
  currentLang: 'en' | 'de' | 'es' | 'nl';
}

const { metadata = {}, availableLanguages, currentLang } = Astro.props;
const currentPath = Astro.url.pathname;
const textDirection = 'ltr'; // All supported languages are LTR
---

<!doctype html>
<html lang={currentLang} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <ApplyColorMode />
    <Metadata {...metadata} />
    <SiteVerification />
    <Analytics />

    <!-- Language alternates -->
    <HreflangTags 
      availableLanguages={availableLanguages}
      currentPath={currentPath}
    />

    <!-- Comment the line below to disable View Transitions -->
    <ClientRouter fallback="swap" />

    {metadata?.content && (
      <StructuredData
        type={metadata.type}
        data={metadata.content}
        canonicalUrl={metadata.canonicalUrl}
        availableLanguages={availableLanguages}
      />
    )}

  </head>

  <body class="antialiased text-default bg-page tracking-tight flex flex-col min-h-screen">
    <Header 
      {...headerData}
      isSticky
      showToggleTheme
      currentLang={currentLang}
      currentPath={currentPath}
    />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer 
      {...footerData}
      currentLang={currentLang}
      currentPath={currentPath}
    />

    <BasicScripts />
  </body>
</html>
