---
import { getCollection } from 'astro:content';
import PageLayout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Grid from '~/components/episode/Grid.astro';

const metadata = {
  title: 'CRO.CAFE - Der Conversion Rate Optimization Podcast',
  description: 'Dein Podcast für alles rund um Conversion Rate Optimization.',
};

const availableLanguages = ['en', 'de', 'es', 'nl'];

// Get German episodes
const episodes = await getCollection('de-episodes');

// German show ID from Transistor
const germanShowId = '28592';
---

<PageLayout {...{ metadata, availableLanguages, currentLang: 'de' }}>
  <Hero
    title="Willkommen bei CRO.CAFE"
    subtitle="Dein Podcast für alles rund um Conversion Rate Optimization"
  />

  {/* Latest Episodes */}
  <section class="py-12">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-center">Neueste Episoden</h2>
      <Grid
        episodes={episodes}
        limit={6}
        showId={germanShowId}
        orderBy="published_at"
        orderDirection="desc"
        button={{
          show: true,
          text: "Alle Episoden anzeigen",
          link: "/de/episodes"
        }}
      />
    </div>
  </section>
</PageLayout>
