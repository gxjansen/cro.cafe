---
import { SITE } from '~/config';
import { getLanguageFromURL } from '~/utils/permalinks';
import type { MetaData } from '~/types';
import PageLayout from '~/layouts/PageLayout.astro';

const metadata: MetaData = {
  title: 'Contact us',
  description: 'Join 15K+ subscribers for the world\'s most exciting raw discussions on experimentation CRO user research and digital marketing from the industry leaders who live and breathe it.',
};

const availableLanguages = ['en', 'nl', 'de', 'es'] as const; // Ensure this is a readonly array
const currentLang = getLanguageFromURL(Astro.url.pathname) || 'en';
---

<PageLayout
  metadata="{metadata}"
  availableLanguages="{availableLanguages}"
  currentLang="{currentLang}"
>
  <!-- Content of the contact page -->
</PageLayout>
