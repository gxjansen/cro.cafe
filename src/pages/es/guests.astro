---
import PageLayout from '~/layouts/PageLayout.astro';
import GuestOverviewLayout from '~/components/guest/GuestOverviewLayout.astro';
import { getTranslations } from '~/utils/translations';

const t = getTranslations('es');
const metadata = {
  title: `${t.allGuests} | ${t.title}`,
  description: `Conozca a todos los invitados que han aparecido en el podcast ${t.title}.`,
  type: 'website' as const,
  canonicalUrl: Astro.url.href,
  alternateLanguages: {
    en: '/en/guests',
    de: '/de/guests',
    es: '/es/guests',
    nl: '/nl/guests',
  },
};

const availableLanguages = ['en', 'de', 'es', 'nl'] as const;
---

<PageLayout {...{ metadata, availableLanguages, currentLang: 'es' }}>
  <GuestOverviewLayout language="es" />
</PageLayout>