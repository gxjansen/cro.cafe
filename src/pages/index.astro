---
import PageLayout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

// Import images
import heroImage from '~/assets/images/hero-image.png';
import defaultImage from '~/assets/images/default.png';

const metadata = {
  title: 'CRO.CAFE - The Conversion Rate Optimization Podcast',
  ignoreTitleTemplate: true,
};

const availableLanguages = ['en', 'es', 'de', 'nl'];
---

<PageLayout 
  metadata={metadata} 
  availableLanguages={availableLanguages}
  currentLang="en"
>
  <!-- Hero Widget -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Listen Now',
        href: '#episodes',
        icon: 'tabler:player-play',
      },
      { text: 'About', href: '#about' },
    ]}
    image={{ src: heroImage, alt: 'CRO.CAFE Hero Image' }}
  >
    <Fragment slot="title">
      Welcome to <span class="text-accent dark:text-white highlight">CRO.CAFE</span>
    </Fragment>

    <Fragment slot="subtitle">
      Your go-to podcast for everything Conversion Rate Optimization. Join us for expert insights, practical tips, and the latest trends in CRO.
    </Fragment>
  </Hero>

  <!-- Features Widget -->
  <Features
    id="about"
    tagline="About"
    title="What is CRO.CAFE?"
    subtitle="Join us for in-depth discussions about Conversion Rate Optimization with industry experts and practitioners."
    items={[
      {
        title: 'Expert Guests',
        description: 'Learn from leading CRO practitioners and industry experts sharing their knowledge and experiences.',
        icon: 'tabler:users',
      },
      {
        title: 'Practical Insights',
        description: 'Get actionable tips and strategies you can apply to improve your conversion rates.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Multiple Languages',
        description: 'Content available in English, German, Spanish, and Dutch to serve our global audience.',
        icon: 'tabler:language',
      },
      {
        title: 'Latest Trends',
        description: 'Stay up-to-date with the latest developments and best practices in CRO.',
        icon: 'tabler:chart-arrows',
      },
      {
        title: 'Case Studies',
        description: 'Real-world examples and success stories from various industries and businesses.',
        icon: 'tabler:notebook',
      },
      {
        title: 'Community',
        description: 'Join a growing community of CRO professionals and enthusiasts.',
        icon: 'tabler:messages',
      },
    ]}
  />

  <!-- Content Widget -->
  <Content
    id="episodes"
    isReversed
    tagline="Latest Episodes"
    title="Listen to Our Latest Discussions"
    items={[
      {
        title: 'Expert Insights',
        description: 'Learn from industry leaders and practitioners who share their experiences and knowledge.',
      },
      {
        title: 'Practical Tips',
        description: 'Get actionable advice you can implement in your CRO strategy right away.',
      },
      {
        title: 'Success Stories',
        description: 'Hear real case studies and success stories from various industries.',
      },
    ]}
    image={{
      src: defaultImage,
      alt: 'Latest Episodes Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        New episodes every week
      </h3>
      Subscribe to never miss an episode
    </Fragment>
  </Content>
</PageLayout>
