---
export interface HeroWithSearchProps {
  currentLang: 'en' | 'de' | 'es' | 'nl';
  title?: string;
  subtitle?: string;
  tagline?: string;
}

const {
  currentLang = 'en',
  title = 'Test Title',
  subtitle = 'Test Subtitle',
  tagline = 'Test Tagline'
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20">
      <div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
        {tagline && (
        <p class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase">
          {tagline}
        </p>
        )} {title && (
        <h1
          class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
        >
          {title}
        </h1>
        )} {subtitle && (
        <p class="text-xl text-muted mb-6 dark:text-slate-300">{subtitle}</p>
        )}

        <!-- Temporary Search Placeholder -->
        <div class="mb-8">
          <div class="max-w-md mx-auto">
            <input
              type="text"
              placeholder="Search functionality coming soon..."
              class="w-full px-4 py-3 border border-gray-300 rounded-lg"
              disabled
            />
          </div>
          <div class="mt-4 text-sm text-gray-600 dark:text-gray-400">
            Search will be available after build
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
