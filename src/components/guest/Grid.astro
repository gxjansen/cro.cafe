---
import { LanguageSchema } from '~/utils/component-validation';
import type { z } from 'zod';

interface Props {
  language: z.infer<typeof LanguageSchema>;
}

// Language prop is required for future language-based filtering implementation
// @see https://github.com/gxjansen/cro.cafe/issues/xyz
const { language } = Astro.props;
---

<div class="mx-auto max-w-7xl px-4 sm:px-6 py-8">
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <div class="text-center">
      <p class="text-muted">Guest list coming soon...</p>
    </div>
  </div>
</div>
