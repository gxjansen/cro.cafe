---
interface Props {
  fallback: string;
}

const { fallback } = Astro.props;
---

{
  Astro.slots.has('default') ? (
    <slot />
  ) : (
    <div class="error-fallback" role="alert">
      <p class="error-message">{fallback}</p>
    </div>
  )
}

<style>
.error-fallback {
  @apply p-4 m-4 bg-red-50 dark:bg-red-900/20 border border-red-200 
         dark:border-red-800 rounded-lg text-red-700 dark:text-red-300;
}

.error-message {
  @apply text-center;
}
</style>
