---

interface Props {
  title: string;
  subtitle?: string;
  type: 'episode' | 'guest' | 'quote';
  imageUrl?: string;
  logoUrl?: string;
}

const {
  title,
  subtitle = '',
  type,
  imageUrl = '/images/default-og.png',
  logoUrl = '/images/crocafe-logo.svg'
} = Astro.props;
---

<div style="width: 1200px; height: 630px; background: #1a1a1a; color: white; display: flex; flex-direction: column; padding: 60px;">
  <div style="display: flex; align-items: center; margin-bottom: 40px;">
    <img src={logoUrl} alt="CRO.CAFE Logo" style="height: 40px;" />
    <div style="margin-left: 20px; padding-left: 20px; border-left: 2px solid #666;">
      <span style="text-transform: uppercase; color: #666;">{type}</span>
    </div>
  </div>
  
  <div style="flex: 1; display: flex; flex-direction: column; justify-content: center;">
    <h1 style="font-size: 64px; line-height: 1.2; margin: 0; font-weight: bold;">
      {title}
    </h1>
    {subtitle && (
      <p style="font-size: 32px; margin: 20px 0 0; color: #666;">
        {subtitle}
      </p>
    )}
  </div>

  {imageUrl && (
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;">
      <img src={imageUrl} alt="" style="width: 100%; height: 100%; object-fit: cover; opacity: 0.1;" />
    </div>
  )}
</div>
