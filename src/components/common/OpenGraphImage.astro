---
import { Image } from 'astro:assets';
import type { OpenGraphImageProps } from '~/types';

interface Props {
  title: string;
  subtitle?: string;
  type: 'episode' | 'guest' | 'quote';
  imageUrl?: string;
  logoUrl?: string;
}

const {
  title,
  subtitle = '',
  type,
  imageUrl = '/images/default-og.png',
  logoUrl = '/images/crocafe-logo.svg'
} = Astro.props;

const imageWidth = 1200;
const imageHeight = 630;
---

<Image
  src={imageUrl}
  alt={`OpenGraph image for ${title}`}
  width={imageWidth}
  height={imageHeight}
  format="png"
  quality={90}
  class="absolute inset-0 w-full h-full object-cover"
/>

<div class="absolute inset-0 bg-black/50 p-8 flex flex-col justify-end">
  <div class="flex items-center gap-4">
    {logoUrl && (
      <Image
        src={logoUrl}
        alt="CRO.CAFE logo"
        width={100}
        height={100}
        class="w-16 h-16"
      />
    )}
    <div class="flex-1">
      <h1 class="text-4xl font-bold text-white">{title}</h1>
      {subtitle && <p class="text-xl text-white mt-2">{subtitle}</p>}
    </div>
  </div>
</div>
