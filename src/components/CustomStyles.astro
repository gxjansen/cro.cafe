---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(221 142 145);    /* #dd8e91 */
    --aw-color-secondary: rgb(149 195 192);  /* #95c3c0 */
    --aw-color-accent: rgb(255 103 109);     /* #ff676d */

    --aw-color-primary-light: rgba(221, 142, 145, 0.1);
    --aw-color-secondary-light: rgba(149, 195, 192, 0.1);
    --aw-color-accent-light: rgba(255, 103, 109, 0.1);

    --aw-color-text-heading: rgb(23 23 23);  /* #171717 - darker for better contrast */
    --aw-color-text-default: rgb(38 38 38);  /* #262626 - darker for better contrast */
    --aw-color-text-muted: rgb(82 82 82);    /* #525252 - darker for better contrast */
    --aw-color-bg-page: rgb(255 255 255);    /* white */

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(221 142 145);    /* #dd8e91 */
    --aw-color-secondary: rgb(149 195 192);  /* #95c3c0 */
    --aw-color-accent: rgb(255 103 109);     /* #ff676d */

    --aw-color-primary-light: rgba(221, 142, 145, 0.1);
    --aw-color-secondary-light: rgba(149, 195, 192, 0.1);
    --aw-color-accent-light: rgba(255, 103, 109, 0.1);

    --aw-color-text-heading: rgb(250 250 250);  /* #fafafa - lighter for better contrast */
    --aw-color-text-default: rgb(245 245 245);  /* #f5f5f5 - lighter for better contrast */
    --aw-color-text-muted: rgb(209 213 219);    /* gray-300 - lighter for better contrast */
    --aw-color-bg-page: rgb(3 6 32);            /* #030620 */

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
